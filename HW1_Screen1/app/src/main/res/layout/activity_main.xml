<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E89C"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="732dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="\nTen Question Flag Quiz"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 of 10\n"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/nicaragua_flag"
            tools:srcCompat="@drawable/nicaragua_flag" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="\nGuess the Country"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/button3"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Puerto Rico"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button4"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Grenada"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button5"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nicaragua"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/button8"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bahamas"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button6"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Guatemala"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button7"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Aruba"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#000000"
            android:text="Select Number of Choices"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#FFC107"
            android:text="Select Regions"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>